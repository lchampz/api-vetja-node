generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Servico {
  IDServico Int     @id @default(autoincrement())
  Nome      String  @db.VarChar(50)
  Descricao String? @db.VarChar(200)

  @@map("Servico")
}

model Cliente {
  IDCliente     Int        @id @default(autoincrement())
  CPF           String?    @db.VarChar(14)
  Nome          String     @db.VarChar(50)
  Especialidade String     @db.VarChar(200)
  Telefone      String     @db.VarChar(20)
  Email         String     @db.VarChar(60)
  Senha         String     @db.VarChar(50)
  Animal        Animal[]
  Endereco      Endereco[]

  @@map("Cliente")
}

model Endereco {
  IDEndereco  Int      @id @default(autoincrement())
  IDCliente   Int?
  Logradouro  String   @db.VarChar(100)
  Numero      Int
  Complemento String   @db.VarChar(50)
  Bairro      String   @db.VarChar(20)
  Cidade      String   @db.VarChar(20)
  CEP         String   @db.VarChar(10)
  Cliente     Cliente? @relation(fields: [IDCliente], references: [IDCliente], onDelete: NoAction, onUpdate: NoAction, map: "Endereco_ibfk_1")

  @@index([IDCliente], map: "IDCliente")
  @@map("Endereco")
}

model Animal {
  IDAnimal    Int      @id @default(autoincrement())
  RGA         Int?
  Nome        String   @db.VarChar(50)
  IDCliente   Int?
  Especie     String   @db.VarChar(20)
  Raca        String?  @db.VarChar(20)
  Cor         String   @db.VarChar(20)
  Idade       Int
  Observacoes String?  @db.VarChar(50)
  Cliente     Cliente? @relation(fields: [IDCliente], references: [IDCliente], onDelete: NoAction, onUpdate: NoAction, map: "Animal_ibfk_1")

  @@index([IDCliente], map: "IDCliente")
  @@map("Animal")
}

model Veterinario {
  IDVeterinario Int    @id @default(autoincrement())
  CRMV          Int
  Nome          String @db.VarChar(50)
  Especialidade String @db.VarChar(200)
  Telefone      String @db.VarChar(20)
  Email         String @db.VarChar(60)
  CEP           String @db.VarChar(10)

  @@map("Veterinario")
}
